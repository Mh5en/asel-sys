{
  "name": "aseel-system-management",
  "version": "1.0.0",
  "description": "نظام إدارة المخزون والمحاسبة لشركة أسيل",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder",
    "dist:skip-sign": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "build:installer": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --win nsis",
    "build:icon": "node create-icon.js",
    "prebuild": "npm run build:icon",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "inventory",
    "accounting",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "markdown-it": "^14.1.0",
    "puppeteer": "^24.29.0",
    "sharp": "^0.34.4",
    "to-ico": "^1.1.5"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.10.0"
  },
  "build": {
    "appId": "com.asel.inventorysystem",
    "productName": "أسيل",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!tests/**/*",
      "!dist/**/*",
      "!*.md",
      "!*.pdf"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/bcryptjs/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "forceCodeSigning": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": true,
      "warningsAsErrors": false,
      "installerLanguages": ["en_US"],
      "language": "1033",
      "shortcutName": "أسيل",
      "menuCategory": false
    }
  }
}
